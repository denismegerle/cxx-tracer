
# OpenCV
set(OPENCV_INSTALL_LOCATION ${CMAKE_BINARY_DIR}/opencv)
ExternalProject_Add(opencv
	GIT_REPOSITORY https://github.com/opencv/opencv
    GIT_TAG 9ba5581d176baf7c8fceb12b4dcef6c49c7a087d # 4.0.0-alpha
    SOURCE_DIR opencv
    BINARY_DIR opencv-build
    CMAKE_ARGS
		${ep_common_args}
		-DBUILD_DOCS:BOOL=OFF
		-DBUILD_EXAMPLES:BOOL=OFF
		-DBUILD_NEW_PYTHON_SUPPORT:BOOL=OFF
		-DCMAKE_BUILD_TYPE:STRING=Release
        -DCMAKE_INSTALL_PREFIX=${OPENCV_INSTALL_LOCATION}
		-DBUILD_PERF_TESTS=OFF
		-DBUILD_TESTS=OFF
		-DOPENCV_ENABLE_ALLOCATOR_STATS=OFF
)
set(OPENCV_LIBRARIES opencv_imgproc opencv_core opencv_highgui opencv_imgcodecs)
include_directories(${OPENCV_INSTALL_LOCATION}/include/opencv4)
link_directories(${OPENCV_INSTALL_LOCATION}/lib)

